[user]
    name = Alexander Isaev
    email = IsaevAV27@gmail.com
[code]
    autocrlf = input
    editor = nvim
[diff]
    tool = vimdiff
[init]
    defaultBranch = main
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[alias]
    co = checkout
    st = status
    cm = commit -m
    cp = cherry-pick
    po = push origin
    pur = pull --rebase
    hist = log --pretty=format:'%C(yellow)[%ad]%C(reset) %C(green)[%h]%C(reset) | %C(red)%s %C(bold red){{%an}}%C(reset) %C(blue)%d%C(reset)' --graph --date=short
    type = cat-file -t
    dump = cat-file -p


